@model IEnumerable<Asilo.Models.Establecimiento>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/style.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>

<h1>Lista de Establecimientos activos</h1>
<p>
    <a asp-action="Create" class="btn btn-outline-info">Crear nuevo</a>
</p>
<table class="table custom-table table-responsive table-hover">
    <thead>
        <tr>
            <th scope="col">Razón social</th>
            <th scope="col">Nit</th>
            <th scope="col">Representante</th>
            <th scope="col">Correo electronico</th>
            <th scope="col">Telefono</th>
            <th scope="col">Celular</th>
            <th scope="col">Direccion</th>
            <th scope="col">Tipo</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr scope="row">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RepresentantePrincipal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoEstablecimiento)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning fas fa-pencil-alt"></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-success fas fa-eye"></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger fas fa-trash-alt"></a>
                </td>
            </tr>
            <tr class="spacer"><td colspan="100"></td></tr>
        }
    </tbody>
</table>
