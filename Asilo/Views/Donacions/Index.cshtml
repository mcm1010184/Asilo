                @Html.DisplayFor(modelItem => item.Recibida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoBenefactor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDonacion)
