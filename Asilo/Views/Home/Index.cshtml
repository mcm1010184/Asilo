<!-- //stats -->
<!--/w3l-bottom-->
<section class="w3l-bottom py-5">
    <div class="container py-md-4 py-3 text-center">
        <div class="row my-lg-4 mt-4">
            <div class="col-lg-9 col-md-10 ml-auto">
                <div class="subscribe ml-auto">
                    <div class="header-section text-left">
                        <h3 class="hny-title two">Obtenga Actualizaciones Desde Cualquier Lugar</h3>
                        <h4 class="my-2"> ¡No te pierdas las buenas noticias!</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function collapse() {
        document.getElementById("btnColapse").style.display = 'none';
        document.getElementById("btnCancel").style.display = 'none';
        document.getElementById("btnActive").style.display = 'block';
    }
    function show() {
        document.getElementById("btnColapse").style.display = 'block';
        document.getElementById("btnCancel").style.display = 'block';
        document.getElementById("btnActive").style.display = 'none';
    }
</script>
