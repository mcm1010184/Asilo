@model Asilo.Models.RecojosRealizado

@{
    ViewData["Title"] = "Edit";
}

<h1>Lista de recojos</h1>

<h4>Lista de recojos de hoy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EstablecimientoId" class="control-label"></label>
                <select asp-for="EstablecimientoId" class="form-control" asp-items="ViewBag.EstablecimientoId"></select>
                <span asp-validation-for="EstablecimientoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecolectorId" class="control-label"></label>
                <select asp-for="RecolectorId" class="form-control" asp-items="ViewBag.RecolectorId"></select>
                <span asp-validation-for="RecolectorId" class="text-danger"></span>
            </div>
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cantidad)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cantidad)
            </dd>
            <dt class="col-sm-2">
               @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fecha)
            </dd>
            <div class="form-group">
                <input type="submit" value="Si recibi todo" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
