@model IEnumerable<Asilo.Models.RecojosRealizado>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de donaciones que tienes</h1>

<table class="table table-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Establecimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recolector)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Establecimiento.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recolector.Nonbre)
                @Html.DisplayFor(modelItem => item.Recolector.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Recojo listo</a> |
            </td>
        </tr>
}
    </tbody>
</table>
